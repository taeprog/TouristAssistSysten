<UserControl x:Class="TouristAssistSistem.uiElements.solutionRoutePlaceholder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TouristAssistSistem.uiElements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Padding="15" Margin="0 0 0 15" MaxWidth="200" CornerRadius="5" MaxHeight="400" Background="White">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" Color="#FFEAE6E6" Direction="100" ShadowDepth="0"/>
        </Border.Effect>
        <StackPanel x:Name="StackPanelRoutes">
            <TextBlock x:Name="nameUI" Margin="0 0 0 15" MaxHeight="50" FontSize="15"  FontWeight="Bold">День 1</TextBlock>
            <TextBlock x:Name="descrUI" Margin="0 0 0 15" MaxHeight="50" TextWrapping="Wrap" FontSize="14"  FontWeight="Normal">День 1</TextBlock>

        </StackPanel>
    </Border>
</UserControl>
